<%- include ('../partials/header') %>
    <div class="row">
        <h1 style="text-align: center">Create a New Event</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/events" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="event name">
                </div>
                <div class="form-group">
                    <label for="image">Event poster image url...</label>
                    <input class="form-control" type="text" name="image" id="image" required>
                    
                </div>
                <div class="form-group">
                    <label for="cost">Cost of entery</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99" step="0.01" min="0" required>
                </div>
               
                <div class="form-group">
                    <label for="description">Add Description of your event</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="The most awaited fest....">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/events">Go Back</a>
        </div>
    </div>
<%- include ('../partials/footer') %>

